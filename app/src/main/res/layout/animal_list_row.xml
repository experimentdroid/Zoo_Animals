<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:paddingTop="@dimen/dimen_8_dp"
    android:paddingBottom="@dimen/dimen_8_dp">

    <ImageView
        android:id="@+id/iv_animal"
        android:layout_width="@dimen/dimen_100_dp"
        android:layout_height="@dimen/dimen_100_dp"
        android:paddingStart="@dimen/dimen_0_dp"
        android:paddingEnd="@dimen/dimen_8_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textSize="@dimen/size_14_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_animal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Animal name" />

    <TextView
        android:id="@+id/tv_latin_name"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/size_12_sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_animal"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="Latin name" />

    <TextView
        android:id="@+id/tv_diet"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/size_12_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_animal"
        app:layout_constraintTop_toBottomOf="@id/tv_latin_name"
        tools:text="Animal diet" />

    <TextView
        android:id="@+id/tv_life_span"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/size_12_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_animal"
        app:layout_constraintTop_toBottomOf="@id/tv_diet"
        tools:text="Animal life span" />

</androidx.constraintlayout.widget.ConstraintLayout>